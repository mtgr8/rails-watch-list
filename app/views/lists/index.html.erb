
<div class="banner" id="index_banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://fecha.gr/wp-content/uploads/2019/05/cinema-wallpaper-14.jpg);">
  <div class="container text-center">
    <h1>"<%= @movie_quote.quote %>"</h1>
    <p><%= @movie_quote.title %></p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

<div class="container_small mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h3>My lists</h3>
    <%= link_to "Create new list", new_list_path, class: "btn_create" %>
  </div>

  <div class="grid d-flex col-3">
    <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list), class: "card-category" %>
    <% end %>
  </div>
</div>



